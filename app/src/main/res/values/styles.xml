<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyButtonColoredPositive" parent="Base.TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@color/goodStatus</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyButtonColoredNegative" parent="Base.TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@color/badStatus</item>
        <item name="android:padding">10dp</item>
    </style>


</resources>
